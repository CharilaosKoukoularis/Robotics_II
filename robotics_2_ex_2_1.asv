% Robotics II
% 2nd Series of Exercises

l1 = 4;
l2 = 2;
% y0 = 4;
pgoal = [5,2];

close all

figure
hold on
grid on

plot(pgoal(1),pgoal(2),Marker='x',Color='red')

% ylim([y0 - 4, y0 + 4])
ylim([-4, 4])
xlim([0, 13])
ylabel('p_y')
xlabel('p_x')
xti

i = 0;

for q2 = -3*pi/4:pi/4:pi
    for q1 = 0:5
        i = i + 1;
        p(i,1) = l1 + q1 + l2 * cos(q2);
        p(i,2) = l2 * sin(q2);
        % p(i,2) = y0 + l2 * sin(q2);
        plot(p(i,1),p(i,2),Marker='o',Color='black')
    end
end